{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strictPropertyInitialization": false,
        /* TO REMOVE AFTER UPGARDING SEQUELIZE-TYPESCRIPT - Ensure non-undefined class properties are initialized in the constructor. */
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ]
    }
}